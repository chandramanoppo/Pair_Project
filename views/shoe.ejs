<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoes List</title>
</head>
    <%- include('./component/navbar.ejs') %>
<body>
    <h1>Shoe List</h1>

    <table border="2">
        <tr>
            <th>
                Name
            </th>
           <th>
                Description
           </th>
           <th>
                Image
           </th>
           <th>
                Stock
           </th>
            <th>
                Action
            </th>
           
        </tr>
        <% for(let shoe of shoes) { %>
        <tr>
            <td>
                <%= shoe.name %>
            </td>
            <td>
                <%= shoe.description %>
            </td>
            <td>
                <img src="<%= shoe.imageUrl %>" alt="Shoe Picture" style="height: 200px; width: 200px;">
            </td>
            <td>
                <%= shoe.stock %>
            </td>
            <td>
                <a href="/shoes/<%= shoe.id %>/buy"><button>Buy</button></a>
                <a href="/shoes/<%= shoe.id %>/restock"><button>Restock</button></a>

            </td>
            </tr>
            <% } %>

    </table>
</body>
</html>